<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- Sky -->
    <path
        android:fillType="evenOdd"
        android:pathData="M0,0 L200,0 L200,200 L0,200 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startColor="#1A237E"
                android:endColor="#303F9F"
                android:type="linear"
                android:angle="270" />
        </aapt:attr>
    </path>

    <!-- Castle main structure -->
    <path
        android:fillColor="#795548"
        android:pathData="M40,60 L160,60 L160,180 L40,180 Z" />

    <!-- Castle towers -->
    <path
        android:fillColor="#795548"
        android:pathData="M30,40 L40,40 L40,180 L30,180 Z" />

    <path
        android:fillColor="#795548"
        android:pathData="M160,40 L170,40 L170,180 L160,180 Z" />

    <!-- Battlements -->
    <path
        android:fillColor="#6D4C41"
        android:pathData="M25,35 L35,35 L35,40 L45,40 L45,35 L55,35 L55,40 L155,40 L155,35 L165,35 L165,40 L175,40 L175,35 L185,35 L185,40 L195,40 L195,60 L5,60 L5,40 L15,40 L15,35 L25,35 Z" />

    <!-- Windows -->
    <path
        android:fillColor="#FDD835"
        android:pathData="M60,80 L70,80 L70,90 L60,90 Z" />

    <path
        android:fillColor="#FDD835"
        android:pathData="M90,80 L100,80 L100,90 L90,90 Z" />

    <path
        android:fillColor="#FDD835"
        android:pathData="M130,80 L140,80 L140,90 L130,90 Z" />

    <!-- Gate -->
    <path
        android:fillColor="#424242"
        android:pathData="M90,140 L110,140 L110,180 L90,180 Z" />

    <!-- Ground -->
    <path
        android:fillColor="#795548"
        android:pathData="M0,180 L200,180 L200,200 L0,200 Z" />
</vector>
